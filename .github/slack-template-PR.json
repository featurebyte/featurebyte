{
  "channel": "${AUTHOR_ID}",
	"blocks": [
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "*Workflow Passed* `${GITHUB_WORKFLOW}` for `${GITHUB_REPOSITORY}`"
			}
		},
		{
			"type": "section",
			"fields": [
				{
					"type": "mrkdwn",
					"text": "*Repository:*\n`${GITHUB_REPOSITORY}`"
				},
				{
					"type": "mrkdwn",
					"text": "*Branch:*\n`${GITHUB_HEAD_REF}`"
				},
				{
					"type": "mrkdwn",
					"text": "*Workflow:*\n`${GITHUB_JOB}`"
				},
				{
					"type": "mrkdwn",
					"text": "*Base Branch:*\n`${GITHUB_BASE_REF}`"
				},
				{
					"type": "mrkdwn",
					"text": "*Author:*\n`${AUTHOR_EMAIL}`"
				}
			]
		},
		{
			"type": "actions",
			"elements": [
				{
					"type": "button",
					"text": {
						"type": "plain_text",
						"emoji": true,
						"text": "Job Summary"
					},
					"style": "primary",
					"value": "btn-run",
					"url": "https://github.com/${GITHUB_REPOSITORY}/actions/runs/${GITHUB_RUN_ID}"
				},
				{
					"type": "button",
					"text": {
						"type": "plain_text",
						"emoji": true,
						"text": "Repository"
					},
					"value": "btn_repo",
					"url": "https://github.com/${GITHUB_REPOSITORY}"
				}
			]
		},
		{
			"type": "divider"
		},
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": "Coverage Report: [${COVERAGE_PERCENTAGE}]",
				"emoji": true
			}
		},
		{
			"type": "section",
			"fields": [
				{
					"type": "mrkdwn",
					"text": "*[WARN|SKIP]:*\n`[${COVERAGE_WARNING}|${COVERAGE_SKIPPED}]`"
				},
				{
					"type": "mrkdwn",
					"text": "*[ERRR|FAIL]:*\n`[${COVERAGE_ERRORS}|${COVERAGE_FAILURES}]`"
				},
				{
					"type": "mrkdwn",
					"text": "*No. Tests:*\n`${COVERAGE_TESTS}`"
				},
				{
					"type": "mrkdwn",
					"text": "*Time Taken:*\n`${COVERAGE_TIME}`"
				}
			]
		}
	]
}
